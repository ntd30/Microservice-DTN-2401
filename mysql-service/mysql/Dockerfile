FROM mysql:8.0.37

ARG MYSQL_DATABASE
ARG MYSQL_USER
ARG MYSQL_PASSWORD
ARG MYSQL_ROOT_PASSWORD

ENV MYSQL_DATABASE=$MYSQL_DATABASE
ENV MYSQL_USER=$MYSQL_USER
ENV MYSQL_PASSWORD=$MYSQL_PASSWORD
ENV MYSQL_ROOT_PASSWORD=$MYSQL_ROOT_PASSWORD

# ADD ./init/microservice.sql /etc/mysql/microservice.sql
# RUN cp /etc/mysql/microservice.sql /docker-entrypoint-initdb.d

EXPOSE $MYSQL_PORT